<?xml version="1.0" encoding="utf-8"?>
<!-- Total width increased to 1450dp to fit Shift and Overtime columns -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1450dp"
    android:layout_height="wrap_content"
    android:background="@color/table_header_gray"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingHorizontal="4dp"
    android:gravity="center_vertical">

    <!-- 1. Date Text Header -->
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Date"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- 2. Day Text Header -->
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Day"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- 3. In Text Header -->
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="In"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- 4. Transit Route Header -->
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Transit Route"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- 5. Out Text Header -->
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Out"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- 6. NEW: Assigned Shift Header -->
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Assigned Shift"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- 7. Total Hours Text Header -->
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Total Hrs"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- 8. NEW: Overtime Header -->
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Overtime"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- 9. Location Text Header -->
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="8dp"
        android:text="Work Location"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- 10. Distance ICON Header -->
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_column_distance"
            app:tint="@android:color/black" />
    </FrameLayout>

    <!-- 11. Fingerprint ICON Header -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_column_fingerprint"
            app:tint="@android:color/black" />
    </FrameLayout>

    <!-- 12. GPS ICON Header -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_column_gps"
            app:tint="@android:color/black" />
    </FrameLayout>

    <!-- 13. Status ICON Header -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_column_status"
            app:tint="@android:color/black" />
    </FrameLayout>

</LinearLayout>